gtk-recent-files-max-age = 0
gtk-font-name = "HelveticaBitmap 9"

style "borderlessmenu" = "default"
{
	GtkMenuBar::internal-padding = 0
	GtkMenuBar::shadow-type = GTK_SHADOW_NONE
}
class "*GtkMenuBar*" style "borderlessmenu"

style "borderlessscroll" = "default"
{
	GtkScrollbar::trough-border = 0
	GtkScrollbar::min-slider-length = 40
	GtkScrollbar::slider-width = 25
	bg[NORMAL] = "#626262"
	bg[PRELIGHT] = "#505050"
}
class "*GtkScrollbar*" style "borderlessscroll"
